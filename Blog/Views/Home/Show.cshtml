@model Blog.ViewModels.EntryVM
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vis indlæg</h1>
<a href="/home/Index/" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left"></span> Tilbage til forsiden</a>
<hr />
<div class="well">
    <p>
        @{ int counter = 0; }
        @foreach (var categoryname in Model.CategoryNames)
        {
            counter++;
            @categoryname
            if (counter < Model.CategoryNames.Count)
            {
                @Html.Raw(", ")
            }
        }
    </p>
    <p>
        @if (Model.IsPublished == true)
            {
            <b>
                Udgivet
            </b>
        }

    </p>

    <i>@Model.Date.ToString("dd. MMMM yyyy kl. HH:mm")</i>
    <h2>@Model.Title</h2>
    <p>
        @Html.Raw(Model.Text.Replace(Environment.NewLine, "<br/>"))
    </p>
</div>
<a href="/home/Index/" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left"></span> Tilbage til forsiden</a>